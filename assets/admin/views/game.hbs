<section id="game">

  <h1>Current game</h1>

  {{#if inProgress}}
    <div class="status in-progress">In progress</div>
  {{else}}
    <div class="status waiting">Waiting for players</div>
  {{/if}}

  <table>
  
    <thead>
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Country</th>
        <th>Top score</th>
        <th>Actions</th>
      </tr>
    </thead>
  
    <tbody>
      {{#each players}}
        {{#if id}}
          <tr id="{{id}}">
            <td>{{firstName}}</td>
            <td>{{lastName}}</td>
            <td>{{country}}</td>
            <td>{{topScore}}</td>
            <td><a class="evict" href="#">evict</a></td>
          </tr>
        {{/if}}
        {{#unless id}}
        <tr>
          <td class="empty" colspan="5">EMPTY</td>
        </tr>
        {{/unless}}
      {{/each}}
    </tbody>
  
  </table>

  <!--
  <button class="dislodge">
    <i class="icon icon-angle-left"></i>
    dislodge the ball
    <i class="icon icon-angle-right"></i>
  </button>
  -->

</section>
